<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hardwood" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#080909"
                android:gravity="center"
                android:hint="enter number"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#080909"
                android:gravity="center"
                android:hint="enter number"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="22sp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:background="#B8B8B6"
            android:gravity="center"
            android:hint="RESULT"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TableRow android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:backgroundTint="@color/white"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:backgroundTint="@color/white"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:backgroundTint="@color/white"
                    android:text="*"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:backgroundTint="@color/white"
                    android:text="/"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </TableRow>



            <TableRow
                android:layout_marginTop="12dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/number_1_image_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/wooden_button_resize" />

                <ImageButton
                    android:id="@+id/number_2_image_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/wooden_button_resize" />

                <ImageButton
                    android:id="@+id/number_3_image_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/wooden_button_resize" />

            </TableRow>

            <TableRow
                android:layout_marginTop="12dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/number_4_image_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/wooden_button_resize" />

                <ImageButton
                    android:id="@+id/number_5_image_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/wooden_button_resize" />

                <ImageButton
                    android:id="@+id/number_6_image_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/wooden_button_resize" />

            </TableRow>

            <TableRow
                android:layout_marginTop="12dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/number_7_image_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/wooden_button_resize" />

                <ImageButton
                    android:id="@+id/number_8_image_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/wooden_button_resize" />

                <ImageButton
                    android:id="@+id/number_9_image_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/wooden_button_resize" />

            </TableRow>


            <TableRow
                android:layout_marginTop="12dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/number_point_image_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/wooden_button_resize" />

                <ImageButton
                    android:id="@+id/number_0_image_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/wooden_button_resize" />

                <ImageButton
                    android:id="@+id/number_equals_image_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/wooden_button_resize" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</FrameLayout>